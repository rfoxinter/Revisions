\let\oldmin\min
\renewcommand\min[2][]{\oldmin_{#1}\l#2\r}
\let\oldmax\max
\renewcommand\max[2][]{\oldmax_{#1}\l#2\r}
\let\oldlim\lim
\renewcommand\lim[2][]{
    \ifx&#1&
        \def\argI{\oldlim}
    \else
        \def\argI{\oldlim\limits_{#1}}
    \fi\argI\l#2\r
}
\newcommand\limi[2][]{
    \ifx&#1&
        \def\argI{\liminf}
    \else
        \def\argI{\liminf\limits_{#1}}
    \fi\argI\l#2\r
}
\newcommand\lims[2][]{
    \ifx&#1&
        \def\argI{\limsup}
    \else
        \def\argI{\limsup\limits_{#1}}
    \fi\argI\l#2\r
}
\let\oldexp\exp
\renewcommand\exp[2][]{\oldexp^{#1}\l#2\r}
\let\oldln\ln
\renewcommand\ln[2][]{\oldln^{#1}\l#2\r}
\let\oldsup\sup
\renewcommand\sup[2][]{\oldsup_{#1}\l#2\r}
\let\oldinf\inf
\renewcommand\inf[2][]{\oldinf_{#1}\l#2\r}